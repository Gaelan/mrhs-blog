<%= simple_form_for(@assessment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :assigned_date %>
    <%= f.input :due_date %>
    <%= f.input :value %>
    <%= f.input :weight %>
    <%= f.input :autoscore %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.association :section %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
