<%= simple_form_for(@assessment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :section %>
    <%= f.association :tasks %>
    <%= f.input :title, placeholder: 'Defaults to Task title' %>
    <%= f.input :assigned_date %>
    <%= f.input :due_date %>
    <%= f.input :value %>
    <%= f.input :category,
                collection: Assessment.categories.keys,
                selected: :corroborated %>

    <%#= f.input :weight %>
    <%#= f.input :autoscore %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
