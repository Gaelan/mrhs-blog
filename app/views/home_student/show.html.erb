<% if current_user %>
  <div id='student-status-main'>
    <h1><%= @user.name %></h1>
    <h2>Posts</h2>
      <%= render 'post_nav_links' %>
      <br><br>
      <%= render 'posts/post_index' %>
  </div>
  <div id='student-status'>
    <h2><%= Course.find(@user.sections[0].course_id).title %></h2>
    <ul>
      <% @assessments.order(due_date: :desc).each do |a| %>
        <li class='student-status <%= annunciator(a) %>'><span class='student-status'>
          <%= link_to a.title, task_path(a.tasks[0], assessment_id: a.id) %><br>
          Due: <%= a.due_date.to_date.to_s(:long) %>
        <span></li>
      <% end %>
    </ul>
  </div>
  <div class='clear student-status nav-links'>
    <%= render 'post_nav_links' %>
  </div>
<% end %>
