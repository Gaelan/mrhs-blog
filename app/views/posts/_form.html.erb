<%= form_for([@user, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :published %><br>
    <%= f.check_box :published %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <%= f.fields_for :images do |image_form| %>
    <div class='image_field'>
      <div class="field">
        <%= image_form.label :_destroy %>
        <%= image_form.check_box :_destroy %>
      </div>
      <% if image_form.object.file.exists? %>
        <%= image_tag image_form.object.file.url, width: "100px" %>
      <% else %>
        <div class="field">
          <%= image_form.label :file %>
          <%= image_form.file_field :file %>
        </div>
      <% end %>
      <div class="field">
        <%= image_form.label :caption %>
        <%= image_form.text_field :caption %>
      </div>
      <div class="field">
        <%= image_form.label :maker %>
        <%= image_form.text_field :maker %>
      </div>
      <div class="field">
        <%= image_form.label :src, "Source URL" %>
        <%= image_form.text_field :src %>
      </div>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
