<h1><%= @user.name %>'s Blog</h1>

<% @posts.each do |post| %>
    <h1><%= link_to post.title, [@user, post] %></h1>
    <p><%= post.body %></p>

    <% if policy(post).edit? %>
      <%= link_to 'Edit', [:edit, @user, post] %> |
    <% end %>
    <% if policy(post).destroy? %>
      <%= link_to 'Destroy', [@user, post], method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
<% end %>

<br>
<br>

