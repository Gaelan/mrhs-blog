<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :category %>
    <%= f.input :time_required %>
    <%= f.association :strands, include_blank: true, label_method: :label %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
