<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body, input_html: {rows: 20} %>
    <%#= f.input :category %>
    <%= f.input :time_required %>
    <%= f.association :strands,
                      label_method: :label,
                      collection: Strnd.order(label: :asc),
                      include_blank: '--- Select Objective Strands ---'
      %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
