<div class='task-container'>
  <%= render 'display_task' %>
  <div class='objectives-container'>
    <h4>Strands</h4>
    <%= render 'objectives/strands_index' %>
  </div>
  <div class='rubric-container'>
    <h4>Rubric</h4>
    <%= render 'rubrics/index' %>
  </div>
</div>

<div class='clear task-show-edit-links'>
  <% if policy(@task).edit? %>
    <%= link_to 'Edit', edit_task_path(@task) %> |
  <% end %>
  <% if policy(@task).destroy? %>
    <%= link_to 'Delete', [@user, @task], method: :delete,
      data: { confirm: 'Are you sure?' } %> |
  <% end %>
  <% if current_user.student? %>
    <% post = Post.where(user_id: current_user.id, assessment_id: params[:assessment_id]) %>
    <% if post.count == 2 %>
      <%= link_to 'Revise Post', edit_user_post_path(current_user.id, post.ids[0]) %>
    <% elsif post.count > 0 %>
      <%# TODO: deal with multiples – provide select list. %>
      <%= link_to 'More than one post – Return to list', '/' %>
    <% else %>
      <%= link_to 'Get Started', new_user_post_path(user_id: current_user.id,
                                                    assessment_id: params[:assessment_id]) %>
    <% end %> |
  <% end %>
  <%= link_to 'Back', :back %>
</div>
