<div class='task-container'>
  <%= render 'display_task' %>
</div>

<div class='clear task-show-edit-links'>
  <% if policy(@task).edit? %>
    <%= link_to 'Edit', edit_task_path(@task) %> |
  <% end %>
  <% if policy(@task).destroy? %>
    <%= link_to 'Delete', [@user, @task], method: :delete,
      data: { confirm: 'Are you sure?' } %> |
  <% end %>
  <% if current_user.student? %>
    <% post = Post.where(user_id: current_user.id, assessment_id: params[:id]) %>
    <% if post.exists? %>
      <%# TODO: deal with multiples – provide select list. %>
      <%= link_to 'Revise Post', edit_user_post(current_user.id, post.id) %>
    <% else %>
      <%# binding.pry %>
      <%= link_to 'Get Started', new_user_post_path( user_id: current_user.id ) %>
    <% end %> |
  <% end %>
  <%= link_to 'Back', :back %>
</div>
