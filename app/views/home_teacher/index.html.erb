<%#= params.inspect %>

<ul>
  <% @periods.each do |p| %>
    <li><%= "S#{p[:session]}P#{p[:period]}: #{p[:courses].map do |c| c[:title] end.join ' & '}" %></li>
    <ul>
      <% p[:courses].each do |c| %>
        <li><%= "#{c[:title]}" %></li>
          <ul>
            <% c[:students].each do |s| %>
              <li>
                <%= link_to s[:name], "/home_student/show/#{s[:id]}" %>
                <%= assessment_overview(s[:id], c[:assessments]) %>
              </li>
            <% end %>
          </ul>
      <% end %>
    </ul>
  <% end %>
</ul>
