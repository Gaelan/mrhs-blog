<%
 # app/views/home_teacher/_overview_student_detail.html.erb
 %>
<tr>
  <td><%= link_to student[:given_name], "/home_student/show/#{student[:id]}" %></td>
  <td><%= link_to student[:family_name], "/home_student/show/#{student[:id]}" %></td>
  <td>
    <%= last_seen(student[:id]) %>
    <%= unclassified_posts(student[:id]) %>
  </td>
  <% cache objective_summary do %>
    <%= objective_summary(student[:id], course) %>
  <% end %>
  <% cache assessment_overview do %>
    <%= assessment_overview(student[:id], course[:assessments]) %>
  <% end %>
</tr>
