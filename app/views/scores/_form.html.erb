<%= simple_form_for(@score) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :score %>
    <%= f.input :drop %>
    <%= f.input :note %>
    <%= f.association :user %>
    <%= f.association :assessment %>
    <%= f.association :strand %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
